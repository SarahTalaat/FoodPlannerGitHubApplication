<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="410dp"
android:layout_height="730dp"
tools:context=".InspirationalMealDetails_CardView_Fragment"
app:cardCornerRadius="30dp"
app:cardElevation="20dp"
app:cardUseCompatPadding="true"
app:cardPreventCornerOverlap="true"
app:cardBackgroundColor= "@color/orange_2"
app:contentPadding="16dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/img_inspirationalMealDetails"
        android:layout_width="201dp"
        android:layout_height="150dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_inspirationalMealDetails_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:width="100dp"
        android:gravity="center"
        android:hint="id"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/img_inspirationalMealDetails"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="@+id/img_inspirationalMealDetails"
        app:layout_constraintTop_toBottomOf="@+id/img_inspirationalMealDetails" />

    <TextView
        android:id="@+id/tv_inspirationalMealDetails_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:width="100dp"
        android:gravity="center"
        android:hint="Category"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_inspirationalMealDetails_id"
        app:layout_constraintStart_toStartOf="@+id/tv_inspirationalMealDetails_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_inspirationalMealDetails_id" />

    <TextView
        android:id="@+id/tv_inspirationalMealDetails_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:width="100dp"
        android:gravity="center"
        android:hint="Description"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_inspirationalMealDetails_category"
        app:layout_constraintStart_toStartOf="@+id/tv_inspirationalMealDetails_category"
        app:layout_constraintTop_toBottomOf="@+id/tv_inspirationalMealDetails_category" />

    <Button
        android:id="@+id/button_inspirationalMealDetails_addToFavourites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add To Favourite"
        app:layout_constraintEnd_toEndOf="@+id/tv_inspirationalMealDetails_description"
        app:layout_constraintStart_toStartOf="@+id/tv_inspirationalMealDetails_description"
        tools:layout_editor_absoluteY="498dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>