<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Chicken_CardView_Fragment"
    android:layout_width="410dp"
    android:layout_height="300dp"
    app:cardBackgroundColor="@color/orange_2"
    app:cardCornerRadius="30dp"
    app:cardElevation="20dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/img_chicken"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="16dp"
            android:foregroundGravity="center"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_chicken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:width="100dp"
            android:gravity="center"
            android:text="Chicken"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/img_chicken"
            app:layout_constraintHorizontal_bias="0.534"
            app:layout_constraintStart_toStartOf="@+id/img_chicken"
            app:layout_constraintTop_toBottomOf="@+id/img_chicken" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_transparentButton_chicken"
            android:layout_width="324dp"
            android:layout_height="185dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:hint="Button"
            android:textColorHint="@color/transparent"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="@color/orange_light" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>