<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#FFFFFF"
    tools:context=".SignUp_Fragment">


    <ImageView
        android:id="@+id/iv_splashScreen"
        android:layout_width="119dp"
        android:layout_height="103dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_app_logo" />

    <EditText
        android:id="@+id/et_name_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter your name"
        android:minHeight="48dp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/iv_splashScreen"
        app:layout_constraintStart_toStartOf="@+id/iv_splashScreen"
        android:background="@drawable/edit_text_border"
        app:layout_constraintTop_toBottomOf="@+id/iv_splashScreen" />

    <Button
        android:id="@+id/button_sign_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/orange_2"
        android:text="Sign up"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/et_password_sign_up"
        app:layout_constraintStart_toStartOf="@+id/et_password_sign_up"
        app:layout_constraintTop_toBottomOf="@+id/et_password_sign_up"
        app:rippleColor="@color/orange_1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="47dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:srcCompat="@drawable/google_logo" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="150dp"
        android:layout_height="15dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="40dp"
        android:height="20dp"
        android:text="Already have an account?"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <Button

        android:id="@+id/button_gmail_log_in"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/orange_2"
        android:text="Log in"
        android:textColor="@color/white"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/divider"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:rippleColor="@color/orange_1" />

    <EditText
        android:id="@+id/et_email_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter your email"
        android:gravity="center"
        android:minHeight="48dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/edit_text_border"
        app:layout_constraintEnd_toEndOf="@+id/et_name_sign_up"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_name_sign_up"
        app:layout_constraintTop_toBottomOf="@+id/et_name_sign_up" />

    <View
        android:id="@+id/divider"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="@+id/button_sign_in_sign_up"
        app:layout_constraintStart_toStartOf="@+id/button_sign_in_sign_up"
        app:layout_constraintTop_toBottomOf="@+id/button_sign_in_sign_up" />

    <EditText
        android:id="@+id/et_username_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:ems="10"
        android:inputType="text"
        android:minHeight="48dp"
        android:hint="Enter your username"
        android:background="@drawable/edit_text_border"
        app:layout_constraintEnd_toEndOf="@+id/et_email_sign_up"
        app:layout_constraintStart_toStartOf="@+id/et_email_sign_up"
        app:layout_constraintTop_toBottomOf="@+id/et_email_sign_up" />

    <EditText
        android:id="@+id/et_password_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:ems="10"
        android:hint="Enter your password"
        android:minHeight="48dp"
        android:background="@drawable/edit_text_border"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/et_username_sign_up"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_username_sign_up"
        app:layout_constraintTop_toBottomOf="@+id/et_username_sign_up" />


    <Button
        android:id="@+id/button_sign_in_sign_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/orange_2"
        android:text="Sign in"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/button_sign_up"
        app:layout_constraintStart_toStartOf="@+id/button_sign_up"
        app:layout_constraintTop_toBottomOf="@+id/button_sign_up"
        app:rippleColor="@color/orange_1" />

</androidx.constraintlayout.widget.ConstraintLayout>
